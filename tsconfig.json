{
  "compilerOptions": {
    "lib": ["ES2017", "DOM"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "declaration": true,
    "esModuleInterop": true,
    "strict": true, 
    "types": ["jest", "node"],
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@shopping-cart/*": ["app/*"]
    }
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "dist"
  ]
}
