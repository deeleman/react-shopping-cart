{
  "compilerOptions": {
    "lib": ["ES2017", "DOM"],
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@shopping-cart/*": ["app/*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "dist"
  ]
}
